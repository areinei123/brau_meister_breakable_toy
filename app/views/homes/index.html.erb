<div class="row">
  <div class="small-6 column">
    <ul class="small-block-grid-1 medium-block-grid-2 large-block-grid-3">
      <%if current_user %>
  	    <div class="recipe-maker-button">
        <%= link_to 'Recipe Maker', new_recipe_path, class: "button large radius" %>
        </div>
      <% else %>
        <div class="login-to-use">
        <%= link_to "Log in to user the Recipe Maker", new_user_session_path, class: "button large alert" %>
        </div>
      <% end %>
    </ul>
  </div>
</div>  

<% if current_user %>
  <div class="row">
  <table>
    <h3> Your Recipes </h3>
    <thead>
      <tr>
        <th width="200">Recipe name</th>
        <th width="200">Batch Size</th>
        <th width="100">ABV</th>
        <th width="100">IBU</th>
        <th width="100">OG</th>
      </tr>
    </thead>
    <tbody>
      <% @user_recipes.each do |recipe| %>
        <tr>
          <td>
            <%= link_to recipe.name, new_recipe_list_path(recipe) %>
          </td>
          <td><%= recipe.batch_size%> gallons </td>
          <td>recipe.abv</td>
          <td> recipe.ibu</td>
          <td> recipe.og</td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
<% end %>
<div class="row">
  <table>
    <h3> Public Recipes </h3>
    <thead>
      <tr>
        <th width="200">Recipe name</th>
        <th width="200">Batch Size</th>
        <th width="100">ABV</th>
        <th width="100">IBU</th>
        <th width="100">OG</th>
      </tr>
    </thead>
    <tbody>
      <% @public_recipes.each do |recipe| %>
        <tr>
          <td>
            <%= link_to (recipe) do %>
              <%= recipe.name %>
            <% end %>
          </td>
          <td><%= recipe.batch_size%> gallons </td>
          <td>recipe.abv</td>
          <td> recipe.ibu</td>
          <td> recipe.og</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>