  <%= f.select ("post", "ingredient_id", Ingredient.all.where(type_class: "Adjunct") { |i| [i.name, i.id] } ) %>
  <%= f.select ("post", "ingredient_id", Ingredient.all.where(type_class: "Sugar") { |i| [i.name, i.id] } ) %>
  <%= f.submit "Add Grains", class: "button" %>
<% end %>



