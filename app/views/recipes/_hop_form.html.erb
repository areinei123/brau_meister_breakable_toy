<div class="row">
  <%= form_for @recipe, :remote => true do |f| %>
    <%= f.fields_for :recipe_ingredients do |t| %>
      <h4>U.S.A.</h4>
      <%= t.collection_select :ingredient_id, Ingredient.where(type_class:"U.S."), :id, :name, include_blank: "Select" %>
