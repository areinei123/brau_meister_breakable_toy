      <%= t.collection_select :ingredient_id, Ingredient.where(type_class:"England"), :id, :name, include_blank: "Select" %>
      <h4>Australia</h4>
      <%= t.collection_select :ingredient_id, Ingredient.where(type_class:"Australia"), :id, :name, include_blank: "Select" %>
      <h4>Germany</h4>
      <%= t.collection_select :ingredient_id, Ingredient.where(type_class:"Germany"), :id, :name, include_blank: "Select" %>
      <h4>Czech Republic</h4>
      <%= t.collection_select :ingredient_id, Ingredient.where(type_class:"Czech Republic"), :id, :name, include_blank: "Select" %>
      <h4>Japan</h4>
      <%= t.collection_select :ingredient_id, Ingredient.where(type_class:"Japan"), :id, :name, include_blank: "Select" %>
      <h4>New Zealand</h4>
      <%= t.collection_select :ingredient_id, Ingredient.where(type_class:"New Zealand"), :id, :name, include_blank: "Select" %>
      <h4>Slovenia</h4>
      <%= t.collection_select :ingredient_id, Ingredient.where(type_class:"Slovenia"), :id, :name, include_blank: "Select" %>

      <%= submit_tag "Submit", class: "button radius" %>
    <% end %>
  <% end %>
</div>